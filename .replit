modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "glibcLocales", "libjpeg_turbo", "libpng", "libxcrypt", "pkg-config", "which"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37683
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "5000"]
